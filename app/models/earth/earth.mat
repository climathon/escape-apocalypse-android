material {
    name : "Textured material",
    parameters : [
        {
           type : sampler2d,
           name : baseColor
        },

        {
           type : sampler2d,
           name : badColor
        }
    ],
    requires : [
        uv0
    ],
    shadingModel : unlit
}

fragment {
    void material(inout MaterialInputs material) {
        prepareMaterial(material);
        material.baseColor = texture(materialParams_badColor, getUV0());
    }
}
